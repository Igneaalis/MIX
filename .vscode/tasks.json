{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format

    // Currently run task doesn't work because it requires --scriptonly arguments and clean war3map.j.
    // Igneaalis: currently working on .ps1 script.
    "version": "2.0.0",
    "type": "shell",
    "command": "${workspaceFolder}\\compile.ps1",
    "problemMatcher": [],
    "presentation": {
        "showReuseMessage": false
    },
    "dependsOn": ["Unlock PowerShell"],
    "tasks": [
        {
            "label": "Play"
        },
        {
            "label": "Play debug",
            "args": ["-debug"]
        },
        {
            "label": "WE",
            "args": ["-worldeditor"]
        },
        {
            "label": "WE debug",
            "args": ["-debug", "-worldeditor"]
        },
        {
            "label": "Unlock PowerShell",
            "command": "powershell",
            "args": ["Set-ExecutionPolicy -Scope CurrentUser Unrestricted"],
            "presentation": {
                "echo": false,
                "clear": true
            }
        }
    ]
}